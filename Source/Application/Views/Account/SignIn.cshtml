@model SignInViewModel
<div class="card">
	<div class="card-header">
		<h1 class="h4 m-0 p-0">Sign in</h1>
	</div>
	<div class="card-body">
		@if(Model.InvalidSecret)
		{
			<div class="alert alert-danger">
				<h2 class="h5">Invalid secret</h2>
				<span>The secret is invalid.</span>
			</div>
		}
		<partial model="@Model.Form" name="SignInForm" />
	</div>
</div>